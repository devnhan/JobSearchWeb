@model TestAPISimple.Models.Candidates

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('@Url.Content("~/Content/pic/viec-lam-online.jpg")');
            background-repeat: no-repeat;
            background-size: cover;
            padding-top: 40px;
            padding-bottom: 40px;
        }

        .container {
            max-width: 330px;
            margin: 0 auto;
        }

        .form-signin {
            background-color: #fff;
            padding: 15px;
            border: 1px solid #e5e5e5;
            border-radius: 4px;
            margin-bottom: 10px;
        }

        .form-signin .form-control {
            position: relative;
            height: auto;
            box-sizing: border-box;
            padding: 10px;
            font-size: 16px;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Đăng nhập</h2>
        @using (Html.BeginForm("Login", "Candidate", FormMethod.Post, new { @class = "form-signin" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.CandidatesEmail, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.CandidatesEmail, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CandidatesPassword, new { @class = "control-label" })
                @Html.PasswordFor(model => model.CandidatesPassword, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input type="submit" id="btnLogin" value="Login" class="btn btn-primary btn-block" />
            </div>
            <div class="form-group">
                <a href="@Url.Action("Register", "Candidate")">Register</a>
            </div>
        }
    </div>
    <script src="~/Scripts/PageScripts/CandidateLogin.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>