@model IEnumerable<TestAPISimple.Models.Recruitment>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trang chủ</title>
    <style>
        /* CSS cho trang chủ */
        body {
            font-family: Arial, sans-serif;
            background-color: #f1f1f1;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
        }

        th {
            background-color: #f8f8f8;
            font-weight: bold;
            text-align: left;
        }

        tbody tr:nth-child(even) {
            background-color: #f8f8f8;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Danh sách tuyển dụng</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Career</th>
                    <th>Skill</th>
                    <th>CompanyName</th>
                    <!-- Thêm các cột khác tùy thuộc vào cấu trúc của đối tượng Recruitment -->
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Career</td>
                        <td>@item.Skill</td>
                        <td>@item.CompanyName</td>
                        <td><a href="/Candidate/SubmitCV">Ung tuyen</a></td>
                        <!-- Thêm các cột khác tùy thuộc vào cấu trúc của đối tượng Recruitment -->
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>